<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/recordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="476dp"
        android:text="Запись"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.731"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/speedSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:max="4"
        android:progress="2"
        app:layout_constraintBottom_toTopOf="@+id/pitchSlider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recordButton"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/speed025TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="0.25"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speedSlider" />

    <TextView
        android:id="@+id/speed05TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.5"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/speed1TextView"
        app:layout_constraintStart_toEndOf="@+id/speed025TextView"
        app:layout_constraintTop_toBottomOf="@+id/speedSlider" />

    <TextView
        android:id="@+id/speed1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speedSlider" />

    <TextView
        android:id="@+id/speed15TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.5"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/speed2TextView"
        app:layout_constraintStart_toEndOf="@+id/speed1TextView"
        app:layout_constraintTop_toBottomOf="@+id/speedSlider" />

    <TextView
        android:id="@+id/speed2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="2"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speedSlider" />

    <TextView
        android:id="@+id/pitch_12TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="- 12"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pitchSlider" />

    <TextView
        android:id="@+id/pitch_6TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 6"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/pitch0TextView"
        app:layout_constraintStart_toEndOf="@+id/pitch_12TextView"
        app:layout_constraintTop_toBottomOf="@+id/pitchSlider" />

    <TextView
        android:id="@+id/pitch0TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pitchSlider" />

    <TextView
        android:id="@+id/pitch6TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/pitch12TextView"
        app:layout_constraintStart_toEndOf="@+id/pitch0TextView"
        app:layout_constraintTop_toBottomOf="@+id/pitchSlider" />

    <TextView
        android:id="@+id/pitch12TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="12"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pitchSlider" />

    <SeekBar
        android:id="@+id/pitchSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:max="24"
        android:progress="12"
        app:layout_constraintBottom_toTopOf="@+id/playButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recordButton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="216dp"
        android:text="Воспроизведение"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>